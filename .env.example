# Environment variables template for Ryha AI Platform
# Copy this file to .env and fill in your actual values

# ========================
# DATABASE CONFIGURATION
# ========================
# Firestore Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
FIRESTORE_EMULATOR_HOST=localhost:8080  # For local development

# ========================
# API CONFIGURATION
# ========================
API_PORT=8000
API_HOST=0.0.0.0
API_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================
# FRONTEND CONFIGURATION
# ========================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# ========================
# AGENT CONFIGURATION
# ========================
# Docker Configuration for Agent Isolation
DOCKER_SOCKET=/var/run/docker.sock
AGENT_NETWORK_NAME=ryha-ai-agents
AGENT_MEMORY_LIMIT=512m
AGENT_CPU_LIMIT=2
AGENT_EXECUTION_TIMEOUT=300  # 5 minutes

# Agent Tool Configurations
OWASP_ZAP_API_KEY=your-zap-api-key
BURP_SUITE_API_KEY=your-burp-api-key
NMAP_PATH=/usr/bin/nmap
SQLMAP_PATH=/usr/bin/sqlmap

# ========================
# SECURITY CONFIGURATION
# ========================
# Encryption Keys
DATA_ENCRYPTION_KEY=your-32-character-encryption-key
RESULT_ENCRYPTION_KEY=your-result-encryption-key

# Security Tool API Keys
SNYK_API_TOKEN=your-snyk-token
SONARCLOUD_TOKEN=your-sonar-token
GITHUB_TOKEN=your-github-token-for-dependency-scanning

# ========================
# CLOUD CONFIGURATION
# ========================
# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Amazon Web Services (Secondary)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-west-2

# Microsoft Azure (Tertiary)
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# ========================
# MONITORING & LOGGING
# ========================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ryha-ai.log

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ========================
# EMAIL CONFIGURATION
# ========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ryha-ai.com

# ========================
# DEVELOPMENT SETTINGS
# ========================
DEBUG=true
TESTING=false
DEVELOPMENT=true

# Hot Reload
FRONTEND_HOT_RELOAD=true
BACKEND_HOT_RELOAD=true

# Database Settings for Development
USE_FIRESTORE_EMULATOR=true
SEED_DATABASE=true

# ========================
# PRODUCTION OVERRIDES
# ========================
# Set these in production environment
# DEBUG=false
# TESTING=false
# DEVELOPMENT=false
# USE_FIRESTORE_EMULATOR=false
# SEED_DATABASE=false

# ========================
# CI/CD CONFIGURATION
# ========================
# GitHub Actions Secrets (set in repository settings)
# GCP_SA_KEY=base64-encoded-service-account-key
# GCP_PROJECT_ID=your-production-gcp-project
# DOCKER_REGISTRY=gcr.io
# SONAR_TOKEN=your-sonarcloud-token
# CODECOV_TOKEN=your-codecov-token

# ========================
# FEATURE FLAGS
# ========================
ENABLE_AGENT_SAFETY_CHECKS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ADVANCED_REPORTING=false  # Enterprise feature
ENABLE_MULTI_TENANT=false       # Future feature

# ========================
# PERFORMANCE TUNING
# ========================
MAX_CONCURRENT_AGENTS=10
AGENT_QUEUE_SIZE=100
DATABASE_POOL_SIZE=20
API_RATE_LIMIT=1000  # requests per minute
CACHE_TTL=300        # 5 minutes

# ========================
# SAFETY CONFIGURATION
# ========================
SAFETY_AGENT_ENABLED=true
MAX_SCAN_DEPTH=10
BLOCKED_DOMAINS=localhost,127.0.0.1,internal.company.com
REQUIRE_TARGET_APPROVAL=true
ENABLE_SANDBOX_MODE=true